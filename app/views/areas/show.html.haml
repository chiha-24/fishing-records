.main_contents
  .main_contents__left
    .area-show
      .area-show__left
        .area-show__left__title
          %p.area-show__name
            = @area.name
        .area-show-map
          %iframe{:allowfullscreen => "allowfullscreen", :frameborder => "0", :src => "https://www.google.com/maps/embed/v1/search?key=AIzaSyDG9SE3gHgFTU8UkCU-Bo82Zr2fxnJJJ-8&q=#{@area.name}+#{@area.city.name}+#{@area.prefecture.name}", :style => "border: 0;", :width => "700",:height => "700"}
      .area-show__right
        .area-show__infomations
          .area-show__pref-city
            %p.area-show__pref--name
              = @area.prefecture.name
            %p.area-show__city--name
              = @area.city.name
          .area-show__info
            .area-show__info--toilet
              %p.toilet トイレ
              - if @area.toilet == nil
                = "不明"
              - elsif @area.toilet 
                = "有り"
              - else
                = "無し"
            .area-show__info--car
              %p.car 駐車場
              - if @area.car == nil
                = "不明"
              - elsif @area.car
                = "有り"
              - else
                = "無し"
        .area-show__comments
          .area-show__comment__form
            = form_with url: area_comments_path(area_id: @area.id),id: "new-comment", method: :post  do |f|
              %p.comment-text コメント
              = f.text_area :text ,class: "comment-textbox"
              = f.submit "送信",class: "comment-submit btn"
          #area-show__comment__container
            - @comments.each do |comment|
              %p
                %strong
                  = link_to user_path(comment.user) do
                    = comment.user.nickname
                = comment.text
  .main_contents__right
    = render partial: 'posts/new_posts',locals: {posts: @area_posts, message: "#{@area.name}"}
