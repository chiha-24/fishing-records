              = link_to "#", class: "init__bottom" do
                Menu
              %ul.menu__second
                %li.menu__second__content
                  = link_to "",class: "li-link" do
                    ログイン
                %li.menu__second__content
                  = link_to destroy_user_session_path,method: :delete do
                    ログアウト
                %li.menu__second__content
                  = link_to "",class: "li-link" do
                    アカウント登録
                %li.menu__second__content
                  = link_to "",class: "li-link" do
                    アカウント編集
                %li.menu__second__content
                  = link_to "",class: "li-link" do
                    釣果検索
                %li.menu__second__content
                  = link_to "",class: "li-link" do
                    釣場検索
    .container
      = yield