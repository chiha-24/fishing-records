<div class="container">
<div class="post-show__title">ユーザー編集</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "ユーザー名" %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
  </div>
   <div class="field">
    <%= f.label "プロフィール" %><br />
    <%= f.text_field :profile, autofocus: true, autocomplete: "profile" %>
  </div>

  <div class="field">
    <%= f.label "現在のパスワード(登録情報の変更には現在のパスワードの入力が必要です。)" %> <br />
    <%= f.password_field :current_password, autocomplete: "current_password" %>
  </div>

  <div class="actions">
    <%= f.submit "更新",class: "btn" %>
  </div>
<% end %>
</div>
