.container
  .user-show 
    .user-name
      %p.user-show__username ユーザー名
      .username 
        = @user.nickname
    .user-profile
  .user-posts
    = "#{@user.nickname}さんの投稿一覧(全#{@post_length}件)"
    .user-posts-container
      - @posts.each do |post| 
        .post-content
          .post-content__item
            = link_to post_path(post) do
              .post-content__title
                -if post.title.length == 0
                  = "（無題）"
                - else
                  = post.title.truncate(9)
              .post-content__image
                - if post.image.blank?
                  %image.noimage-tag{src: "/noimage.png",width: "200",height: "200"}
                -else
                  = image_tag post.image.thumb.to_s
              .post__fishes 
                - post.fish.slice(0,2).each do |fish|
                  = label :fish_name,fish.name
              .post-content__info
                .post__content__info__pref
                  = post.prefecture.name
                  .post__content__info__area
                    = post.area.name
                .post__content__info__time
                  = post.created_at.strftime("%m/%d")